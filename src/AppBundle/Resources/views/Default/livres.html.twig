{#Lier la vue au template de page #}
{% extends "@App/Default/base.html.twig" %}

{% block page %}

    <section class="post_review">
{# boucle for affichan les titres de livre le resum√© et la date de parution#}
        {% for livre in livres %}
            <a class="apercu" href="{{ path('livres', {'id': livre.id}) }}">
                <article>
                    <h2>
                        {{ livre.titre }}
                    </h2>
                    <p>
                        {{ livre.resume }}
                    </p>
                    <p>
                        <em>
                            {{ livre.parutiondate|date("j - M - Y") }}
                        </em>
                    </p>

                </article>
            </a>

        {% endfor %}
    </section>


{% endblock %}